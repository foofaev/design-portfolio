{
  "compilerOptions": {
    "lib": [
      "es6",
      "dom",
      "esnext"
    ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "strict": true,

    "importHelpers": true,
    "allowSyntheticDefaultImports": true,

    "typeRoots": [
      "node_modules/@types",
      "@types"
    ],
    "jsx": "react"
  },
  "include": [
    "backend/**/*",
    "frontend/**/*",
    "@types/*"
  ]
}
